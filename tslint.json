{
  "extends": "tslint:latest",
  "rules": {
    "interface-name": [
      false
    ],
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "never",
      "ignore-interfaces"
    ],
    "trailing-comma": [
      true, {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "interface-over-type-literal": false
  }
}
